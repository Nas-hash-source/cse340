<!--Content Heading-->
<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>


<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <%  }) %>
   </ul>
<% } %>

<div class="form-group form-group-maxwidth">
    <p>Confirm Deletion - The delete is permanent.</p>
    <form action="/inv/delete" method="post" class="inventory-form">       
        <label for="inv_make">Make</label>
        <input 
            type="text" 
            id="inv_make" 
            name="inv_make"
            value="<%= locals.inv_make %>"
            readonly
        >

        <label for="inv_model">Model</label>
        <input 
            type="text" 
            id="inv_model"
            name="inv_model"
            value="<%= locals.inv_model %>"
            readonly
        >

        <label for="inv_price">Price</label>
        <input 
            type="text" 
            id="inv_price"
            name="inv_price"
            value="<%= locals.inv_price %>"
            pattern="^\d+(\.\d{1,2})?$" 
            readonly
        >

        <label for="inv_year">Year</label>
        <input 
            type="text" 
            id="inv_year"
            name="inv_year"
            value="<%= locals.inv_year %>"
            pattern="^\d{4}$"
            readonly
        >

        <input class="inventory-submit" name="submit" type="submit" value="Delete">
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
</div>
